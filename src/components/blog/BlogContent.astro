---
interface Props {
  content: any;
}

const { content } = Astro.props;
---

<article class='prose-slate w-3xl md:prose md:max-w-400 poppins min-w-0'>
  <h1>{content.title}</h1>
  <slot />
  <p class='text-slate'>Written by {content.author}</p>
  <a href='/blog/' title='Back to blog'>&larr; Back to blog</a>
</article>
